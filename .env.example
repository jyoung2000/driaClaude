# driaClaude Environment Configuration
# Copy this file to .env and update the values

# User ID and Group ID for container permissions
# Run 'id -u' to get your user ID and 'id -g' to get your group ID
PUID=1000
PGID=1000

# API Key for authentication (REQUIRED in production)
API_KEY=your_secure_api_key_here

# Enable authentication (set to true in production)
ENABLE_AUTH=false

# Optional: Override default settings
# PORT=4144
# WORKERS=2
# LOG_LEVEL=INFO
# MAX_AUDIO_LENGTH=300